---
import BaseLayout from '../layouts/BaseLayout.astro';
import StartJourneyPopup from '../components/StartJourneyPopup.astro';
---

<BaseLayout>
  <!-- Coming Soon Hero Section -->
  <section class="relative overflow-hidden min-h-screen flex items-center justify-center">
    <div class="absolute inset-0 bg-gradient-to-br from-keto-green-500/10 to-keto-orange-500/10"></div>
    <div class="relative container mx-auto px-4 py-20 text-center">
      <div class="mb-8">
        <div class="inline-block bg-keto-green-100 text-keto-green-800 px-6 py-2 rounded-full font-medium text-lg mb-6">
          Coming Soon
        </div>
      </div>
      
      <h1 class="text-5xl md:text-7xl font-display font-bold text-gray-900 mb-8 animate-fade-in">
        <span class="bg-gradient-to-r from-keto-green-600 to-keto-green-500 bg-clip-text text-transparent">Keto-Friendly</span><br>
        Packaged Goods
      </h1>
      
      <p class="text-xl md:text-2xl text-gray-700 mb-12 max-w-3xl mx-auto animate-slide-up">
        Delicious, convenient, and perfectly crafted for your ketogenic lifestyle. Get ready for premium packaged goods that make staying keto effortless.
      </p>
      
      <div class="flex flex-col items-center gap-8 animate-slide-up">
        <button onclick="openStartJourneyPopup()" class="bg-keto-green-600 text-white px-12 py-4 rounded-full font-semibold text-xl hover:bg-keto-green-700 transform hover:scale-105 transition-all duration-300 shadow-xl">
          Join the Waitlist
        </button>
        
        <p class="text-gray-600 max-w-md">
          Be the first to know when we launch and get exclusive early access to our premium keto products.
        </p>
      </div>
      
      <!-- Product Preview Icons -->
      <div class="mt-16 grid grid-cols-2 md:grid-cols-4 gap-8 max-w-2xl mx-auto opacity-60">
        <div class="flex flex-col items-center">
          <div class="bg-keto-orange-100 w-16 h-16 rounded-full flex items-center justify-center mb-3">
            <svg class="w-8 h-8 text-keto-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
            </svg>
          </div>
          <span class="text-sm text-gray-600 font-medium">Snacks</span>
        </div>
        
        <div class="flex flex-col items-center">
          <div class="bg-keto-green-100 w-16 h-16 rounded-full flex items-center justify-center mb-3">
            <svg class="w-8 h-8 text-keto-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
            </svg>
          </div>
          <span class="text-sm text-gray-600 font-medium">Meals</span>
        </div>
        
        <div class="flex flex-col items-center">
          <div class="bg-keto-yellow-100 w-16 h-16 rounded-full flex items-center justify-center mb-3">
            <svg class="w-8 h-8 text-keto-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
            </svg>
          </div>
          <span class="text-sm text-gray-600 font-medium">Certified</span>
        </div>
        
        <div class="flex flex-col items-center">
          <div class="bg-purple-100 w-16 h-16 rounded-full flex items-center justify-center mb-3">
            <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
            </svg>
          </div>
          <span class="text-sm text-gray-600 font-medium">Premium</span>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Include the popup component -->
  <StartJourneyPopup />
</BaseLayout>