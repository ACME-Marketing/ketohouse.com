---
import BaseLayout from '../layouts/BaseLayout.astro';
import { graphQLClient, gql } from '../lib/graphql';

const GET_KETOHOUSE_POSTS = gql`
  query GetKetohousePosts {
    posts(where: { tagIn: ["ketohouse", "all"] }) {
      nodes {
        title
        uri
        featuredImage {
          node {
            sourceUrl
          }
        }
        tags {
          nodes {
            name
          }
        }
      }
    }
  }
`;

let posts = [];
try {
  const data = await graphQLClient.request(GET_KETOHOUSE_POSTS);
  posts = data.posts.nodes;
} catch (error) {
  console.error("Error fetching posts for ketohouse.com:", error);
}
---

<BaseLayout title="Keto House">
	<header>
		<h1>Welcome to Keto House</h1>
	</header>

	<main class="container">
		{posts.length > 0 ? (
			<ul class="post-list">
				{posts.map((post) => (
					<li class="post-card">
						{post.featuredImage && post.featuredImage.node && (
							<img src={post.featuredImage.node.sourceUrl} alt={post.title} class="post-image" />
						)}
						<div class="post-content">
							<a href={post.uri}><h2>{post.title}</h2></a>
							{post.tags && post.tags.nodes.length > 0 && (
								<p class="post-categories">Tags: {post.tags.nodes.map(tag => tag.name).join(', ')}</p>
							)}
						</div>
					</li>
				))}
			</ul>
		) : (
			<p>No posts found. Please add some posts in your WordPress CMS with the tag "ketohouse" or "all".</p>
		)}
	</main>

	<footer>
		<p>&copy; {new Date().getFullYear()} Keto House. All rights reserved.</p>
	</footer>
</BaseLayout>
