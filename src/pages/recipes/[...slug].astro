---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getPostsByCategory, getPostByUri } from '../../lib/graphql';

export async function getStaticPaths() {
  const recipes = await getPostsByCategory('Recipes');

  return recipes.map((recipe) => ({
    params: { slug: recipe.uri.replace(/\/$/, "") },
    props: { recipe },
  }));
}

const { recipe } = Astro.props;
const post = await getPostByUri(recipe.uri);
---

<BaseLayout>
  <article>
    <h1 class="text-4xl font-bold">{post.title}</h1>
    <div class="mt-4 prose lg:prose-xl" set:html={post.content} />
  </article>
</BaseLayout>
